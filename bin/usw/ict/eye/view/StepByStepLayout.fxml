<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="usw.ict.eye.StepByStepController">
   <top>
      <HBox alignment="TOP_CENTER" prefHeight="100.0">
         <children>
            <Button fx:id="btnStep1" alignment="TOP_LEFT" contentDisplay="CENTER" minWidth="100.0" mnemonicParsing="false" onAction="#handleTakePhoto" textAlignment="CENTER" wrapText="true">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Step 1">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <Label text="사진 촬영" />
                     </children>
                  </VBox>
               </graphic>
            </Button>
            <Button fx:id="btnStep2" alignment="TOP_LEFT" contentDisplay="CENTER" minWidth="100.0" mnemonicParsing="false" onAction="#handleConvertToGray" textAlignment="CENTER" wrapText="true">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Step 2">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <Label text="흑백 전환" />
                     </children>
                  </VBox>
               </graphic>
            </Button>
            <Button fx:id="btnStep3" alignment="TOP_LEFT" contentDisplay="CENTER" minWidth="100.0" mnemonicParsing="false" onAction="#handleDetectFaces" textAlignment="CENTER" wrapText="true">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Step 3">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <Label text="얼굴 인식" />
                     </children>
                  </VBox>
               </graphic>
            </Button>
            <Button fx:id="btnStep4" alignment="TOP_LEFT" contentDisplay="CENTER" minWidth="100.0" mnemonicParsing="false" onAction="#handleDetectEyes" textAlignment="CENTER" wrapText="true">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Step 4">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <Label text="눈동자 인식" />
                     </children>
                  </VBox>
               </graphic>
            </Button>
            <Button fx:id="btnStep5" alignment="TOP_LEFT" contentDisplay="CENTER" minWidth="100.0" mnemonicParsing="false" onAction="#handleFinalResult" textAlignment="CENTER" wrapText="true">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Step 5">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <Label text="최종 결과" />
                     </children>
                  </VBox>
               </graphic>
            </Button>
         </children>
      </HBox>
   </top>
   <center>
      <ImageView fx:id="imageView" fitWidth="700.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>